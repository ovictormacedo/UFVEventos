<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vma.ufveventos.controller.editar_perfil"
    tools:showIn="@layout/app_bar_editar_perfil">

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/rectangle_appbar">
            </LinearLayout>

            <LinearLayout
                android:layout_width="305dp"
                android:layout_height="350dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_outline"
                android:elevation="1dp"
                android:orientation="vertical"
                android:weightSum="1"
                tools:ignore="UselessLeaf">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Seu nome" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="-8dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Seu e-mail" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="-8dp"
                    android:ems="10"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Senha" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="-8dp"
                    android:ems="10"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Data de nascimento" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="-8dp"
                    android:ems="10"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Sexo" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:elevation="1dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    tools:ignore="UselessLeaf">

                    <RadioButton
                        android:id="@+id/radioButton1"
                        style="@android:style/Widget.CompoundButton.RadioButton"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.60"
                        android:text="Masc." />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Fem." />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Outro" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="305dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="310dp"
                android:layout_gravity="center_horizontal"
                android:elevation="1dp"
                android:orientation="vertical"
                android:weightSum="1"
                tools:ignore="UselessLeaf">

                <Button
                    android:id="@+id/button"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_cadastrar"
                    android:text="Alterar Cadastro"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
