<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.labd2m.vma.ufveventos.controller.editar_perfil"
    tools:showIn="@layout/app_bar_editar_perfil">

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/rectangle_appbar">
            </LinearLayout>

            <LinearLayout
                android:layout_width="305dp"
                android:layout_height="524dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_outline"
                android:elevation="1dp"
                android:orientation="vertical"
                android:weightSum="1"
                tools:ignore="UselessLeaf">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Seu nome" />

                <EditText
                    android:id="@+id/nomeEditarPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="-8dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />

                <TextView
                    android:id="@+id/nomeErroEditarPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="2dp"
                    android:text=""
                    android:textColor="@color/red"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Seu e-mail" />

                <EditText
                    android:id="@+id/emailEditarPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="-8dp"
                    android:ems="10"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/emailErroEditarPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="2dp"
                    android:text=""
                    android:textColor="@color/red"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Senha" />

                <EditText
                    android:id="@+id/senhaEditarPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="-8dp"
                    android:ems="10"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/senhaErroEditarPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="2dp"
                    android:text=""
                    android:textColor="@color/red"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="ConfirmaÃ§ao de senha" />

                <EditText
                    android:id="@+id/confirmaSenhaEditarPerfil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="-8dp"
                    android:ems="10"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/confirmaSenhaErroEditarPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="2dp"
                    android:text=""
                    android:textColor="@color/red"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Data de nascimento" />

                <EditText
                    android:id="@+id/nascimentoEditarPefil"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="-8dp"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="text"
                    android:onClick="showDatePickerDialog"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Sexo" />
                <RadioGroup
                    android:id="@+id/sexoEditarPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:elevation="1dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    tools:ignore="UselessLeaf">

                    <RadioButton
                        android:id="@+id/mEditarPerfil"
                        style="@android:style/Widget.CompoundButton.RadioButton"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.60"
                        android:text="Masc." />

                    <RadioButton
                        android:id="@+id/fEditarPerfil"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Fem." />

                    <RadioButton
                        android:id="@+id/oEditarPerfil"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Outro" />
                </RadioGroup>
                <ProgressBar
                    android:id="@+id/progressBarEditarPerfil"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:layout_gravity="center_horizontal"
                    android:max="100"
                    android:minHeight="28dp"
                    android:minWidth="28dp"
                    android:indeterminate="true"
                    android:indeterminateDrawable="@drawable/progress_bar"/>
                <TextView
                    android:id="@+id/sexoErroEditarPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="2dp"
                    android:text=""
                    android:textColor="@color/red"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="305dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="484dp"
                android:layout_gravity="center_horizontal"
                android:elevation="1dp"
                android:orientation="vertical"
                android:weightSum="1"
                tools:ignore="UselessLeaf">

                <Button
                    android:id="@+id/button"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_cadastrar"
                    android:text="Alterar Cadastro"
                    android:onClick="alterar_cadastro"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
