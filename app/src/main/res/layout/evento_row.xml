<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:cardview="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="1dp"
cardview:cardCornerRadius="1dp"
cardview:cardElevation="1dp"
cardview:cardUseCompatPadding="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imagemEventoRow"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ufv"
        android:background="@drawable/round_outline2" />
    <TextView
        android:id="@+id/denominacaoEventoRow"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="95dp"
        android:text="Simpósio de Integração Acadêmica"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/dataEventoRow"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="28dp"
        android:textColor="#BF7E85"
        android:textStyle="italic|bold"
        android:text="05/10" />
    <TextView
        android:id="@+id/horarioEventoRow"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="50dp"
        android:text="Horário: 08:00 - 18:00" />
</RelativeLayout>
</android.support.v7.widget.CardView>