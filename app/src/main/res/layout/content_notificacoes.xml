<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    tools:context="com.example.vma.ufveventos.controller.notificacoes"
    tools:showIn="@layout/app_bar_notificacoes"
    android:id="@+id/frameLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="46dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectangle_appbar">
    </LinearLayout>
    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="454dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="61dp"
        android:background="@drawable/round_outline"
        android:elevation="1dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:ignore="UselessLeaf">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:elevation="1dp"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:ignore="UselessLeaf">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:text="Habilitar Notificações" />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBarCategorias"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:max="100"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_bar"/>/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lista_categorias"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="470dp"
        android:layout_gravity="center_horizontal"
        android:elevation="1dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:ignore="UselessLeaf">

        <Button
            android:id="@+id/button"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_cadastrar"
            android:text="Salvar Configurações"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</FrameLayout>
